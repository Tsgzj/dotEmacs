fun test(dir, outdir) =
    let
      fun listDir(s) =
          let
            var dirs = OS.FileSys.openDir (s)
            fun loop (dirs) = (
              case OS.FileSys.readDir (dirs) of
                  NONE => [] before OS.FileSys.closeDir (dirs)
                | fiel  => file::loop (dirs)
            )
          in
            loop (dirs) handle e => (OS.FileSys.closeDir (dirs); raise (e))
          end
